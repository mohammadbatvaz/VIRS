@model LoginVM
@{
    Layout = "_Layout";
}

<div class="login-container">
    <div class="login-card">
        <div class="login-header">
            <div class="login-icon">🔐</div>
            <h1 class="login-title">پنل مدیریت</h1>
            <p class="login-subtitle">سامانه رزرو نوبت معاینه فنی - VIRS</p>
        </div>

        <form asp-controller="Panel"
              asp-action="Login"
              method="post"
              class="login-form">
            <div class="form-group">
                <label for="username">نام کاربری</label>
                <div class="input-with-icon">
                    <span class="input-icon">👤</span>
                    <input asp-for="Username" type="text" placeholder="نام کاربری خود را وارد کنید" required>
                </div>
            </div>

            <div class="form-group">
                <label for="password">رمز عبور</label>
                <div class="input-with-icon">
                    <span class="input-icon">🔒</span>
                    <input asp-for="Password" type="password" placeholder="رمز عبور خود را وارد کنید" required>
                </div>
            </div>
            <span asp-validation-for="Username" class="text-danger"></span>
            <button type="submit" class="btn-login">ورود به پنل مدیریت</button>
        </form>
    </div>
</div>
